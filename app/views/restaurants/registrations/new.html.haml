= render "page_title", title_text: "Sign up"

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .user-form

    = render "sub_section_header", section_title: "Personal details"

    = render "personal_details", {f: f}


    = render "sub_section_header", section_title: "Account info"

    .field
      = f.label :email
      %br/
      = f.email_field :email

    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off"

    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off"

    .actions
      = f.submit "Sign up", class: "waves-effect waves-light btn"

= render "restaurants/shared/links"
